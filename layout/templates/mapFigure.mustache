<div id="{{id}}" caption="Precipitation from Hurricane Irma">
  <div id="figureButtonCenter">
    <figure>
      {{{figure}}}
    </figure>
    <button id="playButton" onclick="play();">
      {{{playIcon}}}
    </button>
  </div>

  <figureCaption>
    {{line1}}
    <a href="{{stnLink}}" rel = "external" onclick="vizlab.clicklink('{{stnLink}}'); return false;">{{stnText}}</a>
    {{line2}}
    <a href="{{irmaLink}}" rel = "external" onclick="vizlab.clicklink('{{irmaLink}}'); return false;">{{irmaText}}</a>
    {{line3}}
  </figureCaption>
</div>
